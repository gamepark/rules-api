{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}