{
  "name": "@gamepark/rules-api",
  "version": "7.2.0",
  "description": "API to implement the rules of a board game",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "yarn build",
    "test": "vitest",
