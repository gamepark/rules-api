    "release": "npm version ${0:-patch} && npm publish --auth-type=legacy && git push && git push --tags"
  },
  "keywords": [
    "Game Park",
    "Board games",
    "Rules"
  ],
  "author": "Romain Fromi <romain@game-park.com> (https://game-park.com/)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "es-toolkit": "^1.39.10",
    "i18next": "^25.5.2",
    "typescript": "^5.9.2",
    "vitest": "^4.0.10"
  },
  "peerDependencies": {
    "es-toolkit": "^1.39.10"
  },
  "packageManager": "yarn@4.9.4"
}
